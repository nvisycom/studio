{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nvisy",
  "version": "0.1.0",
  "identifier": "nvisy.com",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nvisy",
        "width": 400,
        "height": 720,
        "minWidth": 400,
        "minHeight": 720,
        "maxWidth": 400,
        "maxHeight": 720,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
